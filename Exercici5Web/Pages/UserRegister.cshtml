@page
@model Exercici5Web.Pages.UserRegisterModel
@{
}
<h2>Register</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Register.Email"></label>
        <input asp-for="Register.Email" class="form-control" />
        <span asp-validation-for="Register.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Register.Password"></label>
        <input type="password" asp-for="Register.Password" class="form-control" />
        <span asp-validation-for="Register.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Register.CompanyName"></label>
        <input asp-for="Register.CompanyName" class="form-control" />
        <span asp-validation-for="Register.CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Register.CEOName"></label>
        <input asp-for="Register.CEOName" class="form-control" />
        <span asp-validation-for="Register.CEOName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Register.NumberOfAttendees"></label>
        <input asp-for="Register.NumberOfAttendees" type="number" class="form-control" />
        <span asp-validation-for="Register.NumberOfAttendees" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Register.IsVip" class="form-check-input" type="checkbox" />
        <label asp-for="Register.IsVip" class="form-check-label"></label>
        <span asp-validation-for="Register.IsVip" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
