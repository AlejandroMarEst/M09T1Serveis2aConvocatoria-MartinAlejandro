@page
@model Exercici5Web.Pages.EditClientModel
@{
	ViewData["Title"] = "Update Client";
}

<h2>Update Client</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Client.Email"></label>
        <input asp-for="Client.Email" class="form-control" readonly />
        <span asp-validation-for="Client.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.CompanyName"></label>
        <input asp-for="Client.CompanyName" class="form-control" />
        <span asp-validation-for="Client.CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.CEOName"></label>
        <input asp-for="Client.CEOName" class="form-control" />
        <span asp-validation-for="Client.CEOName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.NumberOfAttendees"></label>
        <input asp-for="Client.NumberOfAttendees" type="number" class="form-control" />
        <span asp-validation-for="Client.NumberOfAttendees" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Client.IsVip" class="form-check-input" type="checkbox" />
        <label asp-for="Client.IsVip" class="form-check-label"></label>
        <span asp-validation-for="Client.IsVip" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}